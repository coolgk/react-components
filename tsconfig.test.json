{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "module": "commonjs",
    "target": "ES2017",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "removeComments": false,
    "strict": true
  },
  "include": [
      "src/**/tests/**/*.tsx",
      "src/**/*.ts",
      "src/**/*.tsx"
  ]
}
