{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "module": "ESNext",
    "target": "ES2016",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "removeComments": false,
    "strict": true
  },
  "include": [
      "test/**/*.tsx",
      "src/**/*.ts",
      "src/**/*.tsx"
  ]
}
